<h1>Klubbar</h1>
<table>
	<thead>
		<tr>
			<th>Namn</th>
			<th>Beskrivning</th>
			<th>Adress</th>
			<th>Postnummer</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @clubs.each do |club| %>
			<tr>
				<td><%= club.name %></td>
				<td><%= club.description %></td>
				<td><%= club.address %></td>
				<td><%= club.zipcode %></td>
				<td><%= link_to 'Visa', club, 'data-no-turbolink' => true %></td>
				<td><%= link_to 'Redigera', edit_club_path(club) %></td>
				<td><%= link_to 'Ta bort', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>
<%= link_to 'New Club', new_club_path %>
