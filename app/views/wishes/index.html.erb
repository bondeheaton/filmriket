<div class="row">
  <div class="large-10 large-centered medium-10 medium-centered columns" id="js-fix">
    <table class="footable table">
      <thead>
      <tr>
        <th data-toggle="true">Användare</th>
        <th data-hide="phone">Meddelande</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @wishes.each do |wish| %>
          <tr>
            <td><%= wish.user.email %><span class="footable-toggle"></span></td>
            <td><%= wish.message %></td>
            <td><%= link_to 'Ta bort', wish, method: :delete, data: { confirm: 'Är du säker?' }, :class => "button tiny radius alert" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>