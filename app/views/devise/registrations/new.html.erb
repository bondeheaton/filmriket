<div class="large-6 large-centered medium-10 medium-centered columns" id="js-fix">
	<%= render 'sign_up_info' %>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<div class="row">
			<%= devise_error_messages! %>
			<div class="large-12 columns">
				<%= f.label "Email:", class: 'white-text' %>
				<%= f.email_field :parentmail %>
				<%= f.hidden_field :ownemail, :value => ""%>
			</div>
			<div class="large-12 columns">
				<%= f.label "Förnamn:", class: 'white-text' %>
				<%= f.text_field :firstname %>
				<%= f.hidden_field :points, :value => 0 %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Efternamn:", class: 'white-text' %>
				<%= f.text_field :lastname %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Födelseår:", class: 'white-text' %>
				<%= select_year(Date.today,
													start_year: Date.today.year - 19, 
													end_year: Date.today.year - 12, 
													field_name: 'birth_year') %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Telefonnummer:", class: 'white-text' %>
				<%= f.text_field :phonenumber %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Adress:", class: 'white-text' %>
				<%= f.text_field :address %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Ort:", class: 'white-text' %>
				<%= f.text_field :city %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Postnummer:", class: 'white-text' %>
				<%= f.number_field :zipcode %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Målsmans/god mans förnamn:", class: 'white-text' %>
				<%= f.text_field :parentfirstname %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Målsmans/god mans efternamn:", class: 'white-text' %>
				<%= f.text_field :parentlastname %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Målsmans/god mans telefonnummer:", class: 'white-text' %>
				<%= f.text_field :parentphonenumber %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Målsmans/god mans email:", class: 'white-text' %>
				<%= f.text_field :email %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Status:", class: 'white-text' %>
				<%= f.select(:status, options_for_select(status_values)) %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Önskemål om klubb:", class: 'white-text' %>
				<%= f.text_field :statusmessage %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Lösenord:", class: 'white-text' %>
				<% if @minimum_password_length %>
					<em class="white-text">(Minst <%= @minimum_password_length %> tecken)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "off" %>
			</div>
			<div class="large-12 columns">
				<%= f.label "Bekräfta Lösenord:", class: 'white-text' %>
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
			</div>
			<div class="large-12 medium-12 small-12 columns">
				<%= f.label "Välj avatar:", class: 'white-text' %>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-zlatan.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-zlatan') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-robocop.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-robocop') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-nicky.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-nicky') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-moon.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-moon') %>'
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-metropolis.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-metropolis') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-little-miss.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-little-miss') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-harry.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-harry') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-charlie.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-charlie') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-best.png" id="thumb" alt="avatar" width="100" height="100">
  				<%= f.radio_button(:avatar, 'avatar-best') %>
          </div>
          <div class="avatar-image large-3 medium-3 small-6 columns">
  				<img src="/avatar-avatar.png" id="thumb" alt="avatar" width="100" height="100">
          <%= f.radio_button(:avatar, 'avatar-avatar') %>
          </div>
        <br><br>
			</div>
			<div class="large-12 columns">
        <br>
				<p class="white-text"><%= f.check_box :agreement %>Acceptera<%= link_to "användaravtal", '/filmclub.pdf', class:'white-text menu-text-no-background', target: "_blank"%></p>
			</div>
			<div class="large-12 columns">
				<p>
					Betala: Swish eller Bankgiro<br/>
					Swish: 1235704549<br/>
					Skriv ditt f&ouml;r- och efternamn i meddelandet
				</p>
				<p>
					BankGiro: 481-8530<br/>
					M&auml;rk inbetalning med ditt f&ouml;r- och efternamn
				</p>
				<p>
					Har du n&aring;gra fr&aring;gor om medlemskap i Filmriket kontakta oss<br/>
					Mail: filmriket@reaktorsydost.se
				</p>
			</div>
			<div class="large-12 columns">
				<%= f.button "Bli medlem", class: 'button expand grey-background' %>
			</div>
		</div>
	<% end %>
</div>
