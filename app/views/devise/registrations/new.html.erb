<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

    <div class="field">
      <%= f.label :firstname %><br>
      <%= f.text_field :firstname %>
      <%= f.hidden_field :points, :value => 0 %>
    </div>
    <div class="field">
      <%= f.label :lastname %><br>
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label :personalnumber %><br>
      <%= f.number_field :personalnumber %>
    </div>
    <div class="field">
      <%= f.label :phonenumber %><br>
      <%= f.number_field :phonenumber %>
    </div>
    <div class="field">
      <%= f.label :avatar %><br>
      <img src="http://filmriket.nu/img/avatar1.png" id="thumb" alt="avatar" width="100" height="100">
      <%= f.radio_button(:avatar, 'avatar1') %>
      <br>
      <img src="http://filmriket.nu/img/avatar2.png" id="thumb" alt="avatar" width="100" height="100">
      <%= f.radio_button :avatar, 'avatar2' %>
      <br>
      <img src="http://filmriket.nu/img/avatar3.png" id="thumb" alt="avatar" width="100" height="100">
      <%= f.radio_button :avatar, 'avatar3' %>
      <br>
      <img src="http://filmriket.nu/img/avatar4.png" id="thumb" alt="avatar" width="100" height="100">
      <%= f.radio_button :avatar, 'avatar4' %>
      <br>
      <img src="http://filmriket.nu/img/avatar5.png" id="thumb" alt="avatar" width="100" height="100">
      <%= f.radio_button :avatar, 'avatar5' %>
      <br>

    </div>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :zipcode %><br>
      <%= f.number_field :zipcode %>
    </div>
    <div class="field">
      <%= f.label :parentmail %><br>
      <%= f.text_field :parentmail %>
    </div>
    <div class="field">
      <%= f.label :access %><br>
      <%= f.number_field :access %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.select(:status, options_for_select(status_values)) %>
    </div>
    <div class="field">
      <%= f.label :statusmessage %><br>
      <%= f.text_field :statusmessage %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <%= f.check_box :agreement %>
    <%= link_to "AnvÃ¤ndaravtal", '/filmclub.pdf', target: "_blank"%>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
