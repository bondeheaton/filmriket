            <div class="video-container">
              <iframe title="YouTube video player" src="http://www.youtube.com/embed/i5YY-XZO6-E?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
      <div class="large-6 columns medium-6 movie-box-wrapper">
        <h4 class="index-heading">Nyheter</h4>
        <div class="large-8 large-centered columns content">
          <%= link_to image_tag("mockup.jpg"), news_index_path %>
        </div>
      </div>
    </div>
  </div>
