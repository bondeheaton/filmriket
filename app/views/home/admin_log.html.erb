<div class="row">
   <div class="small-3 columns">
    <h1 class="admin_header">RECENSIONER</h1>
    <p>
      <% @reviews.each do |review| %>
        <div class="reviews">
            <b><%= review.user.club.name %></b> har gjort en recension:  <%= link_to review.title, review_path(review.id) %><br>
          <div class="button-fix"><%= link_to 'Ta bort', review, remote: true, method: :delete, data: { confirm: "Är du säker?"}, class: 'button tiny alert'%><p class="created"><%= review.created_at %></p></div>
        </div>
      <% end %>
    </p>
   </div>

  <div class="small-3 columns">
    <h1 class="admin_header">KLUBBFILMER</h1>
    <p>
      <% @club_movies.each do |club_movie| %>
        <div class="club_movies">
            <b><%= club_movie.user.club.name %></b> har skapat en film: <%= link_to club_movie.title, club_movie_path(club_movie.id) %><br>
          <div class="button-fix"><%= link_to 'Ta bort', club_movie, remote: true, method: :delete, data: { confirm: "Är du säker?"}, class: 'button tiny alert'%><p class="created"><%= club_movie.created_at %></p></div>
        </div>
      <% end %>
    </p>
   </div>

   <div class="small-3 columns">
    <h1 class="admin_header">KOMMENTARER</h1>
    <p>
      <% @movie_comments.each do |comment| %>
        <div class="comments">
          <% if comment.user %>
           <b><%= comment.user.email %></b><% end %> har kommenterat "<%= comment.message %>" på filmen <% if comment.movie %> <%= link_to comment.movie.title, movie_path(comment.movie_id) %><% end %><br>
          <div class="button-fix"><%= link_to 'Ta bort', comment, remote: true, method: :delete, data: { confirm: "Är du säker?"}, class: 'button tiny alert'%><p class="created"><%= comment.created_at %></p></div>
        </div>
      <% end %>
    </p>
    </div>

  <div class="small-3 columns end">
    <h1 class="admin_header">UPPLADNINGAR</h1>

    <% @uploads.each do |upload| %>
        <div class="uploads">
          <b><%= upload.club.name %></b> har laddat upp en bild:<br>
            <img src="<%= upload.image %>" width="150" height="100" alt="<%= upload.club.name %>"></img><br>
          <div class="button-fix"><%= link_to 'Ta bort', upload, remote: true, method: :delete, data: { confirm: "Är du säker?"}, class: 'button tiny alert'%><p class="created"><%= upload.created_at %></p></div>
        </div>
    <% end %>
    </div>
</div>