<h1>Listing club_movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Videolink</th>
      <th>Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @club_movies.each do |club_movie| %>
      <tr>
        <td><%= club_movie.title %></td>
        <td><%= club_movie.description %></td>
        <td><%= club_movie.videolink %></td>
        <td><%= club_movie.active %></td>
        <td><%= club_movie.user %></td>
        <td><%= link_to 'Show', club_movie %></td>
        <td><%= link_to 'Edit', edit_club_movie_path(club_movie) %></td>
        <td><%= link_to 'Destroy', club_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

