<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3>Filmtitel</h3>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <h3>Beskrivning</h3>
    <%= f.text_area :description %>
  </div>
  <br>
  <div class="field">
    <h3>Regissör</h3>
    <%= f.text_field :director %>
  </div>
  <br>
  <div class="field">
    <h3>Genre</h3>
    <%= f.text_field :genre %>
  </div>
  <br>
  <div class="field">
    <h3>Speltid</h3>
    <%= f.number_field :playtime %>
  </div>
  <br>
  <div class="field">
    <h3>Publicerad</h3>
    <%= f.number_field :published %>
  </div>
  <br>
  <div class="field">
    <h3>Trailer-länk</h3>
    <%= f.text_field :trailerlink %>
  </div>
  <br>
  <div class="field">
    <h3>Bild</h3>
	<%= f.file_field :videocover %>
  </div>
  <div class="actions">
    <%= f.submit "Lägg till film", :class => 'button success' %>
  </div>
<% end %>
