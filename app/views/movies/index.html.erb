<!-- Loopar igenom och skriver ut alla filmer -->
<% if user_signed_in? %>
    <% if current_user.access == 2 %>
        <%= link_to 'Ny Film', new_movie_path, :class => 'button success expand' %>
    <% end %>
<% end %>

<% num = 0 %>
<% @movies.each do |movie| %>
    <div class="mobile-movies">
      <%= link_to movie, remote: true, data: {:"reveal-id" => "movie-modal"} do %>
          <div class="movie-link2">
            <%= image_tag(movie.videocover, size: "102x139") %>
          </div>

          <div class="movie-link">
            <h3><%= movie.title %></h3>

          </div>
          <% num = num + 1%>
      <% end %>
<% end %>

<br>

<%= link_to 'New Movie', new_movie_path %>

<!-- Render partial for movie modal popup -->
<%= render partial: 'movie_modal' %>