<h1>Evenemang</h1>
<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Beskrivning</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Visa', event %></td>
        <td><%= link_to 'Redigera', edit_event_path(event) %></td>
        <td><%= link_to 'Ta bort', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Event', new_event_path %>